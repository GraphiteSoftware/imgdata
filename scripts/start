}

_16bit_f(){
	clear
	while [ 1 ]
	do
		"$WORKDIR"/tools/$IMGDATA 16bit $choice
		errorlevel=$?
		if [ $errorlevel != 0 ]; then
			printf "\e[1;31m\nSomething went wrong. Check the lines above.\n"
				printf "\e[37m\nTry again? (y/n): "
				while [ 1 ]
				do
					read ans
					if [ -z "$ans" ]; then
						printf "\e[37m\nTry again? (y/n): "				
					else
						if [ $ans == "n" ] || [ $ans == "N" ]; then				
							return
						fi
						if [ $ans == "y" ] || [ $ans == "Y" ]; then
							break
						fi
					fi
				done
		else
			return
		fi
	done
}

